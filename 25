#include<stdio.h>
struct e{int u,v,w;};
int f(int p[],int i){while(p[i]!=-1)i=p[i];return i;}
int main(){
    struct e ed[]={{0,1,2},{0,3,6},{1,2,3},{1,3,8},{1,4,5},{2,4,7},{3,4,9}};
    int p[5]={-1,-1,-1,-1,-1},c=0,i=0,j,cost=0;
    for(i=0;i<6;i++)for(j=0;j<6-i;j++)if(ed[j].w>ed[j+1].w){
        struct e t=ed[j];ed[j]=ed[j+1];ed[j+1]=t;
    }
    printf("MST:\n");
    for(i=0;c<4;i++){
        int x=f(p,ed[i].u),y=f(p,ed[i].v);
        if(x!=y){
            printf("%d-%d: %d\n",ed[i].u,ed[i].v,ed[i].w);
            p[x]=y;cost+=ed[i].w;c++;
        }
    }
    printf("Cost: %d",cost);
}
