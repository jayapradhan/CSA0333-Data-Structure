#include<stdio.h>
void merge(int a[],int l,int m,int r){
    int i=l,j=m+1,k=0,t[r-l+1];
    while(i<=m&&j<=r)
        t[k++]=a[i]<a[j]?a[i++]:a[j++];
    while(i<=m)t[k++]=a[i++];
    while(j<=r)t[k++]=a[j++];
    for(i=l,k=0;i<=r;i++,k++)a[i]=t[k];
}
void sort(int a[],int l,int r){
    if(l<r){
        int m=(l+r)/2;
        sort(a,l,m);
        sort(a,m+1,r);
        merge(a,l,m,r);
    }
}
int main(){
    int arr[]={6,5,3,1,8,7,2,4},n=8,i;
    sort(arr,0,n-1);
    for(i=0;i<n;i++)printf("%d ",arr[i]);
}
